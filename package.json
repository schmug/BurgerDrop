{
  "name": "burger-drop",
  "version": "1.0.0",
  "description": "A fun HTML5 canvas game where players tap falling ingredients to complete burger orders",
  "main": "src/worker.js",
  "type": "module",
  "scripts": {
    "deploy": "npm run validate && wrangler deploy",
    "dev": "wrangler dev",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build:game": "rollup -c",
    "build:worker": "node scripts/build-worker.js",
    "build": "npm run build:game && npm run build:worker",
    "build:dev": "rollup -c --environment NODE_ENV:development && npm run build:worker",
    "build:prod": "NODE_ENV=production npm run build",
    "validate": "node scripts/validate-deployment.js",
    "predeploy": "npm run build && npm run validate"
  },
  "keywords": [
    "game",
    "html5",
    "canvas",
    "burger",
    "restaurant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.0.0",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.10.0",
    "rollup": "^4.0.0",
    "rollup-plugin-string": "^3.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.18.0"
  }
}